@page "/"
@using AfiliacionesCirsa.ViewModels
@inject IHomePageViewModel vm;

<RadzenLayout Style="background-color: var(--bg-grey); -ms-align-content: center; overflow: auto; overflow-x: hidden !important; scrollbar-color: transparent transparent !important;">
    

    <div class="main-container">
        <HomeNavbar VM="@vm" />

        <div class="home-container">
            <div class="text-overlay">
                <p style="color: white; font-weight: bolder; font-size: 48px; margin: 0;">Recommend and Earn with Cirsa</p>
                <RadzenButton Click="@(()=>vm.goRegister())" Text="SIGN UP" Style="background-color: black; color: white; margin-top: 40px; height: 35px;" />
            </div>

        </div>

        <div class="explanation-container">
            <h2 class="title is-2" style="color: black;">Welcome to Cirsa affiliates program</h2>
            <p style="color: black; margin-left: 20px;">Explore one of the most expansive affiliate marketing initiatives globally with the Cirsa Affiliates Program. Empowering content creators, publishers, and bloggers, this program enables them to capitalize on their audience traffic. With a diverse array of products and offerings within Cirsa, affiliates leverage user-friendly link-building tools to guide their audience toward endorsed choices, earning rewards from eligible transactions and programs.</p>
        </div>

        <div class="table-container">
            <div class="row" >
                <div class="col-sm-12 col-md-4 mb-6">
                    <img style="margin-left: 10px !important;" class="responsive-img" src="https://img.icons8.com/external-bearicons-outline-color-bearicons/64/external-sign-up-call-to-action-bearicons-outline-color-bearicons-2.png" alt="external-sign-up-call-to-action-bearicons-outline-color-bearicons-2" />
                    <h2 class="title is-2">Sign Up</h2>
                    <p>
                        Join the ranks of countless creators, publishers, and bloggers who are maximizing their earnings through the Cirsa Affiliates Program.
                    </p>
                </div>
                <div class="col-sm-12 col-md-4 mb-6">
                    <img class="responsive-img" src="https://img.icons8.com/external-flatarticons-blue-flatarticons/65/000000/external-recommend-seo-flatarticons-blue-flatarticons.png" alt="external-recommend-seo-flatarticons-blue-flatarticons" />
                    <h2 class="title is-2">Recommend</h2>
                    <p>
                        Connect your audience with a myriad of products through our platform. Tailored linking tools are at your disposal, catering to the needs of large publishers, individual bloggers, and social media influencers.
                    </p>
                </div>
                <div class="col-sm-12 col-md-4 mb-6">
                    <img class="responsive-img" src="https://img.icons8.com/external-microdots-premium-microdot-graphic/64/external-earn-business-finance-vol1-microdots-premium-microdot-graphic.png" alt="external-earn-business-finance-vol1-microdots-premium-microdot-graphic" />
                    <h2 class="title is-2">Earn</h2>
                    <p>
                        Gain associate commissions of up to 10% on qualifying purchases and programs. Benefit from our competitive conversion rates, optimizing your potential earnings.
                    </p>
                </div>
            </div>
           
        </div>
        <div class="card-container">
            <HomeCard VM="@vm" />
        </div>

        <div class="footer-container">
            <Footer />
        </div>
    </div>

    <style>
        .main-container {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            text-align: center;
            width: 100vw;
        }

        .home-container {
            position: relative;
            background-image: url('/images/casino_valencia.jpg');
            background-size: cover;
            background-position: top center;
            background-repeat: no-repeat;
            width: 100%;
            height: 60vh; /* Ajusta esta altura según tus necesidades */
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

            .home-container::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5); /* Ajusta el valor alpha para controlar la opacidad */
            }

            .home-container .text-overlay {
                position: relative;
                z-index: 1; /* Asegura que el texto esté por encima del fondo oscuro */
            }

        .explanation-container {
            width: 80%;
            margin-top: 100px !important;
            margin: auto;
            text-align: left;
        }

        .table-container {
            width: 80%;
            margin-top: 100px !important;
            margin: auto;
            overflow-x: hidden;
        }

        table {
            width: 100%;
            border-radius: 10px;
            border-collapse: separate;
            border-spacing: 10px; /* Añadido para manejar espaciado entre celdas */
        }

        th, td {
            border: 0px solid #ddd;
            padding: 8px;
            border-radius: 8px;
            background-color: #f2f2f2;
        }

        .new-td {
            padding: 8px;
            background-color: transparent !important;
        }

        .new-th {
            padding: 8px;
            background-color: transparent !important;
        }

        .responsive-img {
            width: 20%;
            min-width: 64px;
            height: auto;
            min-height: 64px;
        }

        .td-2 {
            text-align: justify !important;
        }



        .card-container {
            width: 100%;
            margin: auto;
        }

        .footer-container {
            width: 100%;
            margin-top: 75px !important;
        }

    </style>

</RadzenLayout>



